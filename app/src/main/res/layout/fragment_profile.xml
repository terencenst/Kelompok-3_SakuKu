<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Profile Picture and Name -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="16dp">

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/baseline_account_circle_24"
            android:scaleType="centerCrop"
            android:layout_marginEnd="16dp"
            android:contentDescription="" />

        <TextView
            android:id="@+id/profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Budi"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Settings List -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Riwayat -->
        <TextView
            android:id="@+id/riwayat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Riwayat"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:clickable="true"
            android:focusable="true"
            android:onClick="openRiwayat"
            android:background="@drawable/selector_button"
            app:drawableEndCompat="@drawable/baseline_keyboard_arrow_right_24" />


        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0" />

        <!-- Akun Saya -->
        <TextView
            android:id="@+id/akun_saya"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Akun Saya"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:clickable="true"
            android:focusable="true"
            android:onClick="openAkunSaya"
            android:background="@drawable/selector_button"
            app:drawableEndCompat="@drawable/baseline_keyboard_arrow_right_24" />


        <!-- Atur PIN -->
        <TextView
            android:id="@+id/atur_pin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Atur Pin"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:clickable="true"
            android:focusable="true"
            android:onClick="openAturPin"
            android:background="@drawable/selector_button"
            app:drawableEndCompat="@drawable/baseline_keyboard_arrow_right_24" />


        <!-- Pengaturan Notifikasi -->
        <TextView
            android:id="@+id/pengaturan_notifikasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pengaturan Notifikasi"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:clickable="true"
            android:focusable="true"
            android:onClick="openPengaturanNotifikasi"
            android:background="@drawable/selector_button"
            app:drawableEndCompat="@drawable/baseline_keyboard_arrow_right_24" />


        <!-- Bahasa -->
        <TextView
            android:id="@+id/bahasa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bahasa"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:clickable="true"
            android:focusable="true"
            android:onClick="openBahasa"
            android:background="@drawable/selector_button"
            app:drawableEndCompat="@drawable/baseline_keyboard_arrow_right_24" />


        <!-- Bantuan & Laporan -->
        <TextView
            android:id="@+id/bantuan_laporan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bantuan &amp; Laporan"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:clickable="true"
            android:focusable="true"
            android:onClick="openBantuanLaporan"
            android:background="@drawable/selector_button"
            app:drawableEndCompat="@drawable/baseline_keyboard_arrow_right_24" />


        <!-- Pengaturan Akun -->
        <TextView
            android:id="@+id/pengaturan_akun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pengaturan Akun"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:clickable="true"
            android:focusable="true"
            android:onClick="openPengaturanAkun"
            android:background="@drawable/selector_button"
            app:drawableEndCompat="@drawable/baseline_keyboard_arrow_right_24" />


    </LinearLayout>

    <!-- Bottom Navigation -->
<!--    <com.google.android.material.bottomnavigation.BottomNavigationView-->
<!--        android:id="@+id/bottom_navigation"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_gravity="bottom"-->
<!--        android:background="?android:attr/windowBackground"-->
<!--        app:menu="@menu/bottom_nav_menu" />-->
</LinearLayout>
