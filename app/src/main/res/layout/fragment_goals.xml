<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Total Goals Value Section -->
        <TextView
            android:id="@+id/total_goals_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Goals Value"
            android:textSize="16sp"
            android:textColor="@android:color/darker_gray" />

        <TextView
            android:id="@+id/goals_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp200.000.000"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/total_goals_earned"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+Rp3.500.000 Since you began"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="4dp" />

        <!-- Refer a Friend Button and Details -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:background="@android:color/holo_orange_light"
            android:gravity="center_vertical"
            android:padding="12dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_gift_icon"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/refer_a_friend_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Refer a friend\nAnd get Rp50.000"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:gravity="center"
                android:lineSpacingExtra="4dp"
                android:textAlignment="center" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_right"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Goals Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/goals_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Goals"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/see_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="See More"
                android:textSize="16sp"
                android:textColor="@android:color/holo_orange_light"
                android:layout_gravity="end"
                android:layout_weight="1"
                android:gravity="end"/>
        </LinearLayout>

        <!-- Goal: First Home -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_first_home" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:text="First Home"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:text="Rp150.000.000 out of Rp650.000.000"
                        android:textSize="14sp"
                        android:textColor="@android:color/darker_gray" />

                    <TextView
                        android:text="33%"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </LinearLayout>

            <ProgressBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:progress="33"
                android:progressTint="@android:color/holo_orange_light"
                style="@android:style/Widget.ProgressBar.Horizontal" />
        </LinearLayout>

        <!-- Goal: Parents' Haji -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_parents_haji" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:text="Parents' Haji"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:text="Rp10.000.000 out of Rp50.000.000"
                        android:textSize="14sp"
                        android:textColor="@android:color/darker_gray" />

                    <TextView
                        android:text="10%"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </LinearLayout>

            <ProgressBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:progress="10"
                android:progressTint="@android:color/holo_orange_light"
                style="@android:style/Widget.ProgressBar.Horizontal" />
        </LinearLayout>

        <!-- Goal: Holiday -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_holiday" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:text="Holiday"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:text="Rp5.000.000 out of Rp10.000.000"
                        android:textSize="14sp"
                        android:textColor="@android:color/darker_gray" />

                    <TextView
                        android:text="50%"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </LinearLayout>

            <ProgressBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:progress="50"
                android:progressTint="@android:color/holo_orange_light"
                style="@android:style/Widget.ProgressBar.Horizontal" />
        </LinearLayout>

        <!-- Goal: New Car -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_new_car" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:text="New Car"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:text="Rp30.000.000 out of Rp400.000.000"
                        android:textSize="14sp"
                        android:textColor="@android:color/darker_gray" />

                    <TextView
                        android:text="7.5%"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </LinearLayout>

            <ProgressBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:progress="8"
                android:progressTint="@android:color/holo_orange_light"
                style="@android:style/Widget.ProgressBar.Horizontal" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>